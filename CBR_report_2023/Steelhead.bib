file = {:Users/markusmin/Documents/CBR/literature/siegel_2021_steelhead_migration_envt.pdf:pdf},
isbn = {1111111111},
issn = {19326203},
journal = {PLoS ONE},
number = {5 May 2021},
pages = {1--28},
pmid = {33970924},
title = {{Environmentally triggered shifts in steelhead migration behavior and consequences for survival in the mid-Columbia River}},
url = {http://dx.doi.org/10.1371/journal.pone.0250831},
