issn = {19395582},
journal = {Ecological Applications},
keywords = {Bayesian,PIT tag,abundance,detection probability,escapement,hierarchical model,nested patch occupancy,river network,salmonid,steelhead},
number = {8},
pages = {1--17},
pmid = {32583579},
title = {{A Bayesian nested patch occupancy model to estimate steelhead movement and abundance}},
